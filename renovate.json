{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "after 2am on monday"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "packageRules": [
    {
      "matchManagers": ["pip_requirements", "pip_setup", "pipenv", "poetry", "pip_compile", "pyproject"],
      "groupName": "Python monorepo dependency update"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ]
}
